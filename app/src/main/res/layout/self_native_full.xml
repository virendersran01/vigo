<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/native_ad_media"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ad_dummy"
            android:gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingHorizontal="15dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ad_header"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/brand_img"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_gradient_round"
                    android:padding="2dp"
                    app:ads_icon="@{@drawable/ad_brand_dummy}" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_brand_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="-2dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/popins_medium"
                        android:gravity="center"
                        android:lines="1"
                        android:singleLine="true"
                        android:text="Rolex India LLC."
                        android:textColor="@color/light_white"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_brand_tag_line"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/popins_light"
                        android:lines="1"
                        android:text="Miles To Run, Miles To Fly"
                        android:textColor="@color/light_white"
                        android:textSize="10sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:background="@color/transparent_black_30"
                android:orientation="vertical"
                android:padding="10dp">


                <TextView
                    android:id="@+id/tv_brand_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/popins_light"
                    android:maxLines="3"
                    android:textColor="@color/light_white"
                    android:text="@string/dummy_ad_text"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/ad_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_white_corner_2"
                    android:backgroundTint="@color/black"
                    android:paddingHorizontal="5dp"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:text="$2000" />

            </LinearLayout>


            <Button
                android:id="@+id/btn_brand"
                android:layout_width="250dp"
                android:layout_height="37dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bg_gradient"
                android:fontFamily="@font/popins_light"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:text="Buy Now"
                android:visibility="visible" />

        </LinearLayout>

        <TextView
            android:layout_width="35dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/_35sdp"
            android:background="@drawable/bg_white_bottom_corner_2"
            android:backgroundTint="@color/colorTheme"
            android:fontFamily="@font/popins_reguler"
            android:gravity="center"
            android:padding="2dp"
            android:text="@string/ad"
            android:textColor="@color/white"
            android:textSize="9sp" />

    </RelativeLayout>
</layout>